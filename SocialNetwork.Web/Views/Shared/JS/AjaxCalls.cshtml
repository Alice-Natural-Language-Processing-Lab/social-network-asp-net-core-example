<script>

    function ajaxCalls() {

        return {
            updatePost: function (data) {
                $.ajax({
                    url: '@Url.Action("UpdatePost", "Home")',
                    type: 'POST',
                    data: data,
                    error: function(err) {
                        console.log(err)
                    }
                })
            },

            deletePost: function(postId) {
                $.ajax({
                    url: '@Url.Action("DeletePost", "Home")',
                    type: 'POST',
                    data: {
                        postId: postId
                    },
                    error: function(err) {
                        console.error(err)
                    }
                })
            },

            publishPost: function (text, onSuccess) {
                $.ajax({
                    url: '@Url.Action("CreatePost", "Home")',
                    type: 'POST',
                    data: {
                        postText: text
                    },
                    success: onSuccess,
                    error: function(err) {
                        console.error(err)
                    }
                })
            },

            loadMorePosts: function(count, skip, onSuccess) {
                $.ajax({
                    url: '@Url.Action("LoadPostsAjax", "Home")',
                    type: 'POST',
                    data: {
                        count: count,
                        skip: skip,
                        propsToInclude : ["Author"]
                    },
                    success: onSuccess,
                    error: function(err) {
                        console.error(err)
                    }
                })
            }
        }
    }

</script>