@model SocialNetwork.Web.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    ViewData["ActivePage"] = "Account/Login";
}

<h2>Login</h2>

<style>
    #btn-submit {
        float: right;
        margin-right: 15px;
    }
</style>


<div class="col-md-offset-2 col-md-4">
    <form asp-action="Login">
        <div class="row">
            <div>
                <div class="form-group col-md-12">
                    <label for="input-username">Username</label>
                    <input name="username" class="form-control" id="input-username" type="text">
                </div>
            </div>
        </div>
        <div class="row">
            <div>
                <div class="form-group col-md-12">
                    <label for="input-password">Password</label>
                    <input name="password" class="form-control" id="input-password" type="password">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group" id="btn-submit">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>
    </form>
</div>