@model SocialNetwork.Web.ViewModels.RegisterViewModel

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<style>
    #btn-submit {
        float: right;
        margin-right: 14px;
    }
</style>

<h2>Register</h2>

<div class="col-md-offset-2 col-md-4">
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group col-md-12">
                <label asp-for="Form.UserName"></label>
                <input asp-for="Form.UserName" class="form-control" />
                <span asp-validation-for="Form.UserName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Form.Password"></label>
                <input asp-for="Form.Password" class="form-control" />
                <span asp-validation-for="Form.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Form.RepeatedPassword"></label>
                <input asp-for="Form.RepeatedPassword" class="form-control" />
                <span asp-validation-for="Form.RepeatedPassword" class="text-danger"></span>
            </div>
            <div class="form-group" id="btn-submit">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
    </form>
</div>